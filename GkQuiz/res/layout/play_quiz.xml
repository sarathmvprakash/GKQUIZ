    android:id="@+id/tv_choice_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/tv_question"
    android:layout_marginTop="52dp"
    android:textColor="#FFFFFF"
    android:width="125dp"
    android:textAppearance="?android:attr/textAppearanceMedium" />
  <TextView
    android:id="@+id/tv_choice_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/tv_choice_1"
    android:layout_alignBottom="@+id/tv_choice_1"
    android:layout_alignRight="@+id/tv_rs1000"
    android:textColor="#FFFFFF"
    android:width="125dp"
    android:textAppearance="?android:attr/textAppearanceMedium" />
  <TextView
    android:id="@+id/tv_choice_3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/tv_choice_1"
    android:layout_marginTop="16dp"
    android:textColor="#FFFFFF"
    android:width="125dp"
    android:textAppearance="?android:attr/textAppearanceMedium" />
  <TextView
    android:id="@+id/tv_choice_4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/tv_choice_3"
    android:layout_alignLeft="@+id/tv_choice_2"
    android:textColor="#FFFFFF"
    android:width="125dp"
    android:textAppearance="?android:attr/textAppearanceMedium" />
