    android:id="@+id/tv_rs32000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignRight="@+id/tv_rs64000"
    android:layout_below="@+id/tv_rs64000"
    android:textColor="#FFFFFC"
    android:text="@string/Rs32000" />
  <TextView
    android:id="@+id/tv_rs16000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignRight="@+id/tv_rs32000"
